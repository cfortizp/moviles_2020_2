<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Precios de Peajes de Colombia"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        android:textColor="#000"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecciona un departamento"
        android:layout_below="@+id/title"
        android:textColor="#000"
        android:padding="8dp" />

    <Spinner
        android:id="@+id/departamentos"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textColor="#000"
        android:layout_below="@+id/text1"
        />
    <TextView
        android:textColor="#000"
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecciona un sector"
        android:layout_below="@+id/departamentos"
        android:padding="8dp" />

    <Spinner
        android:textColor="#000"
        android:id="@+id/municipios"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_below="@+id/text2"
        />

    <TextView
        android:textColor="#000"
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Peajes en la zona:"
        android:layout_below="@+id/municipios"
        android:padding="8dp" />

    <TextView
        android:textColor="#000"
        android:id="@+id/zona_postal"
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/municipios"
        android:layout_toRightOf="@+id/text4"
        android:padding="8dp" />

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/text4"/>


</RelativeLayout>