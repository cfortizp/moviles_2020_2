<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter the company's data!"
            android:textSize="29dp"
            android:textColor="#000"
            android:layout_gravity="center"
            android:gravity="center"
            ></TextView>
        <EditText
                android:layout_marginTop="15dp"
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Company's Name"
                android:textSize="18dp"
                android:textColor="#000"
                android:layout_gravity="center"
                android:inputType="text"
            ></EditText>
        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Classification"
            android:textSize="18dp"
            android:textColor="#000"
            android:layout_gravity="center"
            ></TextView>
        <Spinner
            android:id="@+id/clasification"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_marginTop="15dp"
            android:id="@+id/url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Company's Web Page"
            android:textSize="18dp"
            android:textColor="#000"
            android:layout_gravity="center"
            android:inputType="text"
            ></EditText>
        <EditText
            android:layout_marginTop="15dp"
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Company's E-Mail"
            android:textSize="18dp"
            android:textColor="#000"
            android:layout_gravity="center"
            android:inputType="textEmailAddress"
            ></EditText>
        <EditText
            android:layout_marginTop="15dp"
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Company's Phone"
            android:textSize="18dp"
            android:textColor="#000"
            android:layout_gravity="center"
            android:inputType="number"
            ></EditText>
        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Products and services"
            android:textSize="18dp"
            android:textColor="#000"
            android:layout_gravity="center"
            ></TextView>
        <EditText
            android:id="@+id/services"
            android:height="100dp"
            android:width="100dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Products and services"
            android:textSize="15dp"
            android:textColor="#000"
            android:inputType="textMultiLine"
            ></EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
    <Button
        android:id="@+id/back"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"
        android:textColor="#fff"
        android:textSize="20sp"
        android:text="Back"
        android:background="@color/colorPrimary"
        android:layout_marginRight="30dp"
        ></Button>
        <Button
            android:id="@+id/add"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="30dp"
            android:textColor="#fff"
            android:textSize="20sp"
            android:text="Add"
            android:background="@color/coloradd"
            ></Button>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>